<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<% if @post.image? %>  <!-- アップロード画像がある場合に実行する -->
  <p>
    <strong>Image:</strong>
    <%= image_tag @post.image.url %><!-- userインスタンスの画像ファイルのURLを取得し表示 -->
  </p>
<% end %>
<!-- ここまで -->

<%= link_to 'Edit', edit_post_path(@post) %> |
